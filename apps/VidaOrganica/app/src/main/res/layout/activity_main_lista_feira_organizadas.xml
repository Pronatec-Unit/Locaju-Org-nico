<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_lista_feira_organizadas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#CCCC00"
    tools:context="br.com.vidaorganica.vidaorganica.MainActivityListaFeiraOrganizadas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_vida"
                android:id="@+id/logo_vida"/>

            <TextView
                android:text="@string/listaFeira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#009900"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:layout_marginBottom="10sp"
                android:id="@+id/lista_feira" />

            <Button
                android:text="@string/botao_farolandia"
                android:textColor="@color/colorBranco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@color/colorAbobora"
                android:id="@+id/farolandia" />

            <Button
                android:text="@string/botao_mosqueiro"
                android:textSize="@dimen/fab_margin"
                android:textColor="@color/colorBranco"
                android:textStyle="bold"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/mosqueiro" />

            <Button
                android:text="@string/botao_centro"
                android:textStyle="bold"
                android:textSize="@dimen/fab_margin"
                android:textColor="@color/colorBranco"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/centro" />

            <Button
                android:text="@string/botao_inacio_barbosa"
                android:textColor="@color/colorBranco"
                android:textSize="@dimen/fab_margin"
                android:textStyle="bold"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/inacio_barbosa" />

            <Button
                android:text="@string/botao_santa_tereza"
                android:textStyle="bold"
                android:textSize="@dimen/fab_margin"
                android:textColor="@color/colorBranco"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/santa_tereza" />

            <Button
                android:text="@string/botao_atalaia"
                android:textColor="@color/colorBranco"
                android:textSize="@dimen/fab_margin"
                android:textStyle="bold"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/atalaia" />

            <Button
                android:text="@string/botao_treze_julho"
                android:textColor="@color/colorBranco"
                android:textSize="@dimen/fab_margin"
                android:textStyle="bold"
                android:background="@color/colorAbobora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/treze_junho" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
